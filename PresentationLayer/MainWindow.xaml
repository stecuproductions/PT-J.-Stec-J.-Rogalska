<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="title" HorizontalAlignment="Left" Margin="27,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="265" FontSize="32" FontWeight="Bold"><Run Language="pl-pl" Text="Available books"/></TextBlock>
        <ListBox x:Name="booksList" ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook, Mode=TwoWay}" DisplayMemberPath="Title" SelectionChanged="ListBox_SelectionChanged" Margin="27,79,366,24" FontSize="14"/>
        <StackPanel Margin="439,79,30,24">
            <TextBlock x:Name="selectedBookName" TextWrapping="Wrap" Text="{Binding SelectedBookTitle}" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="selectedBookAuthor" TextWrapping="Wrap" Text="{Binding SelectedBookAuthor}" FontSize="18"/>
            <TextBlock x:Name="selectedBookAvailabilty" TextWrapping="Wrap" Text="{Binding SelectedBookAvailability}" FontSize="18"/>
            <TextBlock x:Name="selectedBookId" TextWrapping="Wrap" Text="{Binding SelectedBook.Id}" FontSize="14"/>
            <TextBlock TextWrapping="Wrap"/>
            <Grid Height="113" Width="328">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto" MinWidth="264"/>
                </Grid.ColumnDefinitions>
                <Button Content="{Binding BorrowReturnText}" x:Name="BorrowReturnButton" Width="112" Margin="0,36,216,36" Grid.Column="0" Grid.ColumnSpan="2" FontSize="16" FontWeight="Bold" Click="BorrowReturnButton_Click" Visibility="Collapsed"/>
                <Button Content="Remove Book" Width="112" HorizontalAlignment="Left" HorizontalContentAlignment="Center" FontSize="16" FontWeight="Bold" Command="{Binding RemoveBookCommand}" Visibility="Collapsed" x:Name="RemoveBookButton" Grid.Column="1" Margin="132,36,0,36"/>
            </Grid>
        </StackPanel>
        <Button Content="Add New Book" HorizontalAlignment="Left" Margin="638,24,0,0" VerticalAlignment="Top" Height="41" Width="132" FontSize="16" FontWeight="Bold" Command="{Binding AddBookCommand}"/>

    </Grid>
</Window>
